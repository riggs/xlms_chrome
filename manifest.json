{
  "manifest_version": 2,
  "name": "XLMS",
  "author": "http://github.com/riggs",
  "description": "XLMS Chrome App",
  "version": "0.3.0",
  "version_name": "beta",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "url_handlers": {
    "launch_exercise": {
      "matches": [
        "https://umn.xlms.org/exercise*"
      ],
      "title": "Launch Exercise"
    }
  },
  "permissions": [
    "hid",
    {"usbDevices": [
      {"vendorId": 1003, "productId": 8256},
      {"vendorId": 1003, "productId": 8257}
    ]},
    "https://umn.xlms.org/",
    "videoCapture",
    "webview"
  ],
  "webview": {
    "partitions": [
      {
        "name": "plugin",
        "accessible_resources": ["style.css"]
      }
    ]
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}